                        <div class="span12">
                            <div class="vertical-center-container icon intro">
                                <div class="vertical-center media-body">
                                    <div class="module articleHeader">
                                        <header>
                                            <h1 class="h1-large text-white margin-fluid-bottom margin-top center">
                                                <i class="icon-iphone margin-fluid-bottom"></i><br>
                                                TimoCom mobile
                                            </h1>
                                        </header>
                                    </div>
                                </div>
                            </div>
